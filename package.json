{
    "name": "tubular-react-common",
    "version": "0.0.1",
    "description": "Unosquare Tubular React Common",
    "main": "index.js",
    "scripts": {
        "build": "tsc --p ./tsconfig.json",
        "start": "npm run build",
        "check": "npm run build && npm test",
        "test": "jest --collect-coverage",
        "lint": "tsc --p ./tsconfig.json --noEmit && eslint src/**/*.{js,ts,tsx} --quiet --fix",
        "preparepackage": "npm run build && npm run copypackage && cd dist && npm pack",
        "copypackage": "npx shx cp package.json dist"
    },
    "jest": {
        "automock": false,
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "<rootDir>/test/**/*.spec.(ts|tsx)"
        ],
        "globals": {
            "ts-jest": {
                "diagnostics": false,
                "tsConfig": "tsconfig.json"
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/unosquare/tubular-react-common.git"
    },
    "author": "Unosquare",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/unosquare/tubular-react-common/issues"
    },
    "homepage": "https://github.com/unosquare/tubular-react-common#readme",
    "dependencies": {
        "tubular-common": "^2.0.7"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@types/jest": "^24.0.23",
        "@types/react": "^16.9.16",
        "@types/react-dom": "^16.9.4",
        "@typescript-eslint/eslint-plugin": "^2.11.0",
        "@typescript-eslint/parser": "^2.11.0",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.17.0",
        "jest": "^24.9.0",
        "prettier": "^1.19.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "ts-jest": "^24.2.0",
        "typescript": "^3.7.3"
    },
    "parcelCleanPaths": []
}